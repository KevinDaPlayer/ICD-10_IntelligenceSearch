    <header class="shadow p-3 bg-underheaderblue text-white"></header>

    
      <div class="container">
        <div class="search-section">
          <form id="symptomForm" action="/AISearch" method="post">
            <label
              for="symptomInput"
              style="
                display: block;
                font-size: 2em;
                margin-block-start: 0.83em;
                margin-block-end: 0.5em;
                margin-inline-start: 0px;
                margin-inline-end: 0px;
                font-weight: lighter;
                unicode-bidi: isolate;
                color: #2c2c2c;
                background-color: #e9e9e9;
                padding: 10px;
                border-radius: 5px;
              "
              >Enter Symptoms:</label
            >
            <textarea type="text" id="symptomInput" name="diagnosis"></textarea>
            <button
              type="submit"
              class="btn btn-search btn-outline-primary me-2"
            >
              Search
            </button>
          </form>
        </div>
        <div class="results-section">
          <label
            style="
              display: block;
              font-size: 2em;
              margin-block-start: 0.83em;
              margin-block-end: 0.5em;
              margin-inline-start: 0px;
              margin-inline-end: 0px;
              font-weight: lighter;
              unicode-bidi: isolate;
              color: #2c2c2c;
              background-color: #e9e9e9;
              padding: 10px;
              border-radius: 5px;
            "
            >Search Results:</label
          >
          <% if (typeof results !=='undefined' && results.length > 0) { %>
          <table class="table table-striped table-hover">
            <thead class="thead-light">
              <tr>
                <th scope="col">ICD-10 Code</th>
                <th scope="col">Description</th>
                <th scope="col">Detail</th>
              </tr>
            </thead>
            <tbody>
              <% results.forEach(function(prediction) { %>
              <tr>
                <td><%= prediction.code %></td>
                <td><%= prediction.description %></td>
                <td><%= prediction.detail %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <% } else {%>
          <p>No results found</p>
          <% } %>
        </div>

        <script></script>
      </div>
    
    <footer
      class="footer mt-auto py-3 bg-light d-flex justify-content-center align-items-center"
