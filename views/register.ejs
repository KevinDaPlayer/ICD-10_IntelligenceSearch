    <form class="register-container" action="/regis" method="post">

      <div class="mb-3">
        <h2>註冊帳號</h2>
        <label for="email" class="form-label">請輸入帳號(電子郵件):</label>
        <input type="email"
        id="email"
        name="email"
        required
        placeholder="Email"
        class="form-control">
        <div class="d-flex justify-content-end">
          <button type="button" class="btn btn-outline-primary btn-sm">發送驗證碼</button>
        </div>
      </div>

      <div class="mb-3">
        <div>
          <label for="password" class="form-label">設定密碼:</label>
        </div>
        <input type="password"
        id="password"
        name="password"
        required
        placeholder="Password"
        class="form-control">
      </div>

      <div class="mb-3">
        <div>
          <label for="confirm-password" class="form-label">再次輸入密碼:</label>
        </div>
        <input type="password"
        id="confirm-password"
        name="confirmPassword"
        required
        placeholder="Confirm Password"
        class="form-control">
      </div>

      <div class="mb-3">
        <div>
          <label for="verification-code" class="form-label">驗證碼:</label>
        </div>
        <input type="text"
        id="verification-code"
        name="verificationCode"
        required
        placeholder="Enter Verification Code"
        class="form-control">
      </div>

      <div class="d-grid gap-2 col-6 mx-auto">
        <input type="submit" value="註冊" class="submit-btn" />
        <a href="http://localhost:3000/clearVerificationCode" class="back-btn"
          >返回</a
        >
      </div>
    </form>

    <script>
      document.querySelector(".verify-btn").addEventListener("click", () => {
        const email = document.getElementById("email").value;
        fetch("/sendVerificationCode", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email: email }),
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error("網絡響應有誤");
            }
            return response.json().then((data) => ({ data, response }));
          })
          .then(({ data, response }) => {
            // 現在你可以在這裡訪問 response 和 data
            if (response.ok) {
              alert("驗證碼已發送到您的郵箱");
            } else {
              alert("錯誤：" + data.message);
            }
          })
          .catch((error) => {
            console.error("發送請求失敗：", error);
            alert("無法發送驗證碼");
          });
      });
    </script>

