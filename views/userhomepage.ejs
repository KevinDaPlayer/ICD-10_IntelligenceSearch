    <nav class="search-container navbar-light">
      <form action="/search" method="post" class="form-inline">
        <input type="text" class="form-control mr-sm-2" placeholder="Search..." name="searchQuery" id="searchQuery">
        <button class="btn btn-search btn-outline-primary me-2 my-sm-0" type="submit">Search</button>
      </form>
    </nav>

    <div class="results-table">
      <% if (typeof searchResults !== "undefined") { %>
      <h3 class="h3-code">2023 ICD-10</h3>
      <table class="table table-hover" id="resultsTable">
        <thead>
          <tr>
            <th>
              <div>ICD-10</div>
              <div>編碼</div>
            </th>
            <th>疾病英文名稱</th>
            <th>疾病中文名稱</th>
          </tr>
        </thead>

        <tbody>
          <% searchResults.forEach(function(result) { %>

          <tr>
            <td>
              <div>
                <%= result['2023_ICD-10-CM'] %>
              </div>
              <button
                class="btn btn-outline-secondary btn-sm btn-copy"
                onclick="copyToClipboard('<%= result['2023_ICD-10-CM'] %>')"
              >
                複製
              </button>
            </td>
            <td><%= result['2023_ICD-10-CM_english_name'] %></td>
            <td><%= result['2023_ICD-10-CM_chinses_name'] %></td>
          </tr>

          <% }); %>
        </tbody>
      </table>

      <% } %>
    </div>

    <div class="results-table">
      <% if (typeof searchResults2014 !== "undefined") { %>
        <h3 class="h3-code">2014 ICD-10</h3>
