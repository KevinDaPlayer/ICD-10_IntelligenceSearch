      /* -------------search bar */
      .search-bar {
        margin: auto;
        padding: 1.5em;
        justify-content: center;
        max-width: 30em;
        display: flex; /* 讓 search-bar 直接顯示 */
      }

      .search-bar input {
        background: transparent;
        border-radius: 1.5em;
        box-shadow: 0 0 0 0.4em #171717 inset;
        padding: 0.75em;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        flex: 1;
        margin-right: 10px; /* 讓 input 和按鈕之間有間距 */
      }

      .search-btn {
        background: #171717;
        border-radius: 0 1.5em 1.5em 0;
        padding: 0.75em 1.5em;
        border: none;
        color: white;
        cursor: pointer;
        display: inline-block;
        transform: none;
        width: auto;
        height: auto;
      }

      .search-btn span {
        display: inline-block;
        overflow: visible;
      }

      /* 移除不需要的樣式 */
      .search-bar input:invalid:not(:focus),
      .search-bar input:focus,
      .search-bar input:valid {
        width: auto;
        transform: none;
      }

      /* --------下拉式表單 */
      .custom-dropdown-container {
        position: relative;
        display: inline-block;
      }

      .custom-dropdown-btn {
        background: #000000;
        border: none;
        color: white;
        padding: 0.75em 1.5em;
        cursor: pointer;
        border-radius: 1.5em 0 0 1.5em;
        margin-right: 10px;
      }

      .custom-dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
      }

      .custom-dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
      }

      .custom-dropdown-content a:hover {
        background-color: #ddd;
      }

      .custom-dropdown-container:hover .custom-dropdown-content {
        display: block;
      }
      .icon {
        width: 40px;
